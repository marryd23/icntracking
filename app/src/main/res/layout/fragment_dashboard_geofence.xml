<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app   ="http://schemas.android.com/apk/res-auto"
    xmlns:tools ="http://schemas.android.com/tools"
    android:layout_width ="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.GeofenceDashboardFragment">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/geofence_grid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:rowCount="7"
        app:columnCount="3"
        android:background="@android:color/white"
        android:padding="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintHeight_percent="0.8"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintHorizontal_bias="0.5">

        <!-- Kolumn 1: indikatorer (initialt gone) -->
        <include
            android:id="@+id/cell_1_1"
            layout="@layout/layout_geofence_cell"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_row="0"
            app:layout_column="0"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1"/>
        <include
            android:id="@+id/cell_2_1"
            layout="@layout/layout_geofence_cell"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_row="1"
            app:layout_column="0"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1"/>
        <include
            android:id="@+id/cell_3_1"
            layout="@layout/layout_geofence_cell"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_row="2"
            app:layout_column="0"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1"/>
        <include
            android:id="@+id/cell_4_1"
            layout="@layout/layout_geofence_cell"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_row="3"
            app:layout_column="0"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1"/>
        <include
            android:id="@+id/cell_5_1"
            layout="@layout/layout_geofence_cell"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_row="4"
            app:layout_column="0"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1"/>
        <include
            android:id="@+id/cell_6_1"
            layout="@layout/layout_geofence_cell"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_row="5"
            app:layout_column="0"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1"/>
        <include
            android:id="@+id/cell_7_1"
            layout="@layout/layout_geofence_cell"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_row="6"
            app:layout_column="0"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1"/>

        <!-- Kolumn 3: sensorer -->
        <include
            android:id="@+id/cell_1_3"
            layout="@layout/layout_geofence_cell"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_row="0"
            app:layout_column="2"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1"/>
        <include
            android:id="@+id/cell_2_3"
            layout="@layout/layout_geofence_cell"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_row="1"
            app:layout_column="2"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1"/>
        <include
            android:id="@+id/cell_3_3"
            layout="@layout/layout_geofence_cell"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_row="2"
            app:layout_column="2"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1"/>
        <include
            android:id="@+id/cell_4_3"
            layout="@layout/layout_geofence_cell"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_row="3"
            app:layout_column="2"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1"/>
        <include
            android:id="@+id/cell_5_3"
            layout="@layout/layout_geofence_cell"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_row="4"
            app:layout_column="2"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1"/>
        <include
            android:id="@+id/cell_6_3"
            layout="@layout/layout_geofence_cell"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_row="5"
            app:layout_column="2"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1"/>
        <include
            android:id="@+id/cell_7_3"
            layout="@layout/layout_geofence_cell"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_row="6"
            app:layout_column="2"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1"/>

    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
